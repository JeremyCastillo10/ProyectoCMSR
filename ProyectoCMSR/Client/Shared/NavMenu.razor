@using MudBlazor
@inherits LayoutComponentBase

<div class="page">
    <MudLayout>
        <MudAppBar Position="AppBarPosition.Top" Color="Color.Primary">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="ToggleDrawer" />
            <MudText Typo="Typo.h6" Class="ml-2">Centro Médico</MudText>
        </MudAppBar>

        <MudDrawer Variant="DrawerVariant.Responsive"
                   Elevation="4"
                   Color="Color.Primary"
                   Open="@_drawerOpen"
                   Style="transition: transform 0.3s ease;">
            <MudDrawerHeader>
                <MudText Typo="Typo.h6" Class="text-white">Menú</MudText>
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavLink Href="/CrearMedicos" Class="mud-nav-link">
                    <MudIcon Icon="@Icons.Material.Filled.Add" />
                    <span class="ml-2">Crear Médicos</span>
                </MudNavLink>
                <MudNavLink Href="/ConsultaMedicos" Class="mud-nav-link">
                    <MudIcon Icon="@Icons.Material.Filled.List" />
                    <span class="ml-2">Consulta Médicos</span>
                </MudNavLink>
            </MudNavMenu>
        </MudDrawer>
    </MudLayout>
</div>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />


@code {
    private bool _drawerOpen = false;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
        StateHasChanged(); // Ensure the UI updates
    }
}
